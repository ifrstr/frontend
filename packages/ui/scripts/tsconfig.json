{
  "compilerOptions": {
    "outDir": "out",
    "rootDir": ".",
    "module": "CommonJS",
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "removeComments": true,
    "skipLibCheck": true,
    "types": [
      "@types/node",
      "@types/react-dev-utils"
    ]
  },
  "include": [
    "*.ts"
  ]
}
